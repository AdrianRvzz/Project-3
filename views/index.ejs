<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/styles.css">
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Mali:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;1,200;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons|Material+Icons+Outlined" rel="stylesheet" />

    <title>To Do List</title>
</head>

<body>
    <div  id="container-notebook" class="container d-flex justify-content-center align-items-center flex-column shadow">
        <div class="background"></div>
        <div class="container-date row d-flex justify-content-center align-items-center" >
        <span  class="col-6 text-center date-day">
            <%= currentDate.day %>
        </span>
        <!-- <h2> <%= currentDate.dayOfWeek %></h2> -->
        <div class="col-6 text-center"> 
            <span  class="date-month-year">
                <%= currentDate.month %>
           
                <%= currentDate.year %>
            </span>
        </div>
    </div>

    <div class="container-tasks " >
    <% for (const [category, tasks] of Object.entries(toDoList)){%>
        <!--<span class="material-icons-outlined">
pending_actions
</span>-->
    <h1 class="task-category">  <i class="material-icons-outlined">pending_actions</i>
        <%= category %></h1>
    
        <% if (Object.keys(tasks)) { %>
            <ul class="task-list pb-2">
                <% for (const [taskName, value] of Object.entries(tasks)){%>
                   
                    
                        <% if (value==0) { %>
                          
                            <li class="task-name"><input type="checkbox" class="task-check" name="<%= taskName.replace(/\s+/g, '') %>" id="<%= taskName.replace(/\s+/g, '') %>" > <label for="<%= taskName.replace(/\s+/g, '') %>"><%= taskName %></label></li>    
                           
                        <% } else{ %>
                            <li class="task-name"><input type="checkbox" class="task-check" name="<%= taskName.replace(/\s+/g, '') %>" id="<%= taskName.replace(/\s+/g, '') %>" checked> <label for="<%= taskName.replace(/\s+/g, '') %>"><%= taskName %></label></li>
                            <% } %>
                    <% } %>
            </ul>
        <% } %>
    
    <% } %>

   

      
</div>
    


    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</body>

</html>